{
  "name": "reos-vscode-bridge",
  "displayName": "ReOS VS Code Bridge",
  "description": "Local-only bridge that mirrors VS Code activity metadata to a local ReOS service.",
  "version": "0.0.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:reos.toggleMirroring",
    "onCommand:reos.sendNote",
    "onCommand:reos.pingService"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reos.toggleMirroring",
        "title": "ReOS: Toggle Mirroring"
      },
      {
        "command": "reos.sendNote",
        "title": "ReOS: Send Note (Metadata Only)"
      },
      {
        "command": "reos.pingService",
        "title": "ReOS: Ping Local Service"
      }
    ],
    "configuration": {
      "title": "ReOS",
      "properties": {
        "reos.serverUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8010",
          "description": "Local ReOS service base URL (must be localhost)."
        },
        "reos.mirroringEnabled": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, sends metadata-only VS Code activity events to the local ReOS service."
        }
      }
    }
  }
}
